# Example Environment Variables for SmartPay
# Copy this file to .env and fill in your actual values

# ===========================================
# BACKEND CONFIGURATION (SpringBoot)
# ===========================================

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=smartpay
DB_USERNAME=smartpay_user
DB_PASSWORD=your_database_password_here
DB_SSL_MODE=prefer
DB_CONNECTION_POOL_SIZE=10
DB_MAXIMUM_POOL_SIZE=20

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_at_least_256_bits_long
JWT_ACCESS_TOKEN_EXPIRATION=900000  # 15 minutes
JWT_REFRESH_TOKEN_EXPIRATION=604800000  # 7 days
JWT_ISSUER=smartpay
JWT_AUDIENCE=smartpay-users

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_SSL=false
REDIS_DATABASE=0

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_SSL=false
RABBITMQ_VIRTUAL_HOST=/

# Email Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_FROM=noreply@smartpay.com
MAIL_FROM_NAME=SmartPay

# SMS Configuration
SMS_PROVIDER=twilio
SMS_TWILIO_ACCOUNT_SID=your_twilio_account_sid
SMS_TWILIO_AUTH_TOKEN=your_twilio_auth_token
SMS_TWILIO_PHONE_NUMBER=+1234567890

# Payment Gateway Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# File Storage Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET=smartpay-files
AWS_CLOUDFRONT_DOMAIN=cdn.smartpay.com

# Security Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Authorization,Content-Type,Accept,X-Requested-With
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Monitoring & Analytics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_URL=https://grafana.yourdomain.com
SENTRY_DSN=https://your_sentry_dsn_here

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/application.log
LOG_MAX_SIZE=100MB
LOG_MAX_FILES=30

# Application Configuration
SERVER_PORT=8080
SERVER_CONTEXT_PATH=/api/v1
SERVER_SSL_ENABLED=false
SERVER_SSL_KEYSTORE_PATH=
SERVER_SSL_KEYSTORE_PASSWORD=

# ===========================================
# FRONTEND CONFIGURATION (Flutter)
# ===========================================

# API Configuration
API_BASE_URL=http://localhost:8080/api/v1
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3

# Authentication Configuration
TOKEN_STORAGE_KEY=smartpay_auth_token
BIOMETRIC_STORAGE_KEY=smartpay_biometric_credentials
SESSION_TIMEOUT_MINUTES=15

# Analytics Configuration
ANALYTICS_ENABLED=true
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID_HERE
MIXPANEL_TOKEN=your_mixpanel_token_here
AMPLITUDE_API_KEY=your_amplitude_api_key_here

# Firebase Configuration
FIREBASE_PROJECT_ID=smartpay-app
FIREBASE_MESSAGING_SENDER_ID=your_fcm_sender_id
FIREBASE_WEB_API_KEY=your_firebase_web_api_key

# Feature Flags
ENABLE_BIOMETRIC_AUTH=true
ENABLE_VOICE_RECOGNITION=true
ENABLE_AR_PAYMENTS=true
ENABLE_SMART_ASSISTANT=true
ENABLE_CLOUD_SYNC=true

# Performance Configuration
CACHE_SIZE_MB=50
CACHE_EXPIRY_HOURS=24
ENABLE_OFFLINE_MODE=true
MAX_OFFLINE_STORAGE_MB=100

# Security Configuration
ENCRYPTION_KEY=your_32_character_encryption_key_here
SSL_PINNING_ENABLED=true
CERTIFICATE_PINNING_HASHES=hash1,hash2,hash3

# UI/UX Configuration
DEFAULT_THEME=light
DEFAULT_LANGUAGE=en
DEFAULT_CURRENCY=USD
DEFAULT_TIMEZONE=UTC

# Notification Configuration
PUSH_NOTIFICATION_ENABLED=true
EMAIL_NOTIFICATION_ENABLED=true
SMS_NOTIFICATION_ENABLED=true
NOTIFICATION_SOUND=default

# Debug Configuration
DEBUG_MODE=false
LOG_LEVEL=info
ENABLE_CRASH_REPORTING=true
ENABLE_PERFORMANCE_MONITORING=true

# ===========================================
# SHARED CONFIGURATION
# ===========================================

# Environment
ENVIRONMENT=development
APP_VERSION=1.0.0
APP_BUILD_NUMBER=1

# Support Configuration
SUPPORT_EMAIL=support@smartpay.com
SUPPORT_PHONE=+1-800-SMARTPAY
HELP_CENTER_URL=https://help.smartpay.com

# Legal Configuration
PRIVACY_POLICY_URL=https://smartpay.com/privacy
TERMS_OF_SERVICE_URL=https://smartpay.com/terms
COOKIE_POLICY_URL=https://smartpay.com/cookies

# Social Media
FACEBOOK_URL=https://facebook.com/smartpay
TWITTER_URL=https://twitter.com/smartpay
LINKEDIN_URL=https://linkedin.com/company/smartpay
INSTAGRAM_URL=https://instagram.com/smartpay

# Third-party Integrations
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
QUICKBOOKS_CLIENT_ID=your_quickbooks_client_id
QUICKBOOKS_CLIENT_SECRET=your_quickbooks_client_secret

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_ENABLED=true

# Compliance Configuration
GDPR_COMPLIANT=true
CCPA_COMPLIANT=true
PCI_DSS_COMPLIANT=true
SOX_COMPLIANT=false

# Rate Limiting
RATE_LIMIT_LOGIN_ATTEMPTS=5
RATE_LIMIT_LOGIN_LOCKOUT_MINUTES=30
RATE_LIMIT_PASSWORD_RESET_HOURS=24
RATE_LIMIT_API_CALLS_PER_MINUTE=1000

# Data Retention
USER_DATA_RETENTION_DAYS=2555  # 7 years
TRANSACTION_DATA_RETENTION_DAYS=2555
AUDIT_LOG_RETENTION_DAYS=3650
CACHE_RETENTION_HOURS=24
